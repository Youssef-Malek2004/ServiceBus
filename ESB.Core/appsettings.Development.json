{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Routes": [
    {
      "ID": "OrderProcessingRoute",
      "Enabled": true,
      "ReceiveLocation": {
        "HttpEndpoint": {
          "EndpointName": "testing",
          "Method": "POST",
          "AuthorizationType" : "BasicAuthorization"
        }
      },
      "SendLocation": {
        "HttpEndpoint":{
          "Url": "http://localhost:5195/",
          "Method": "GET",
          "AuthorizationType": "BasicAuthorization",
          "AuthorizationParameters": {
            "Username": "hello",
            "Password": "World"
          }
        }
      },
      "Settings": {
        "ErrorHandlingProfile": "ErrorProfileC",
        "Sync": true
      }
    },
    {
      "ID": "MessageTestingRoute",
      "Enabled": true,
      "ReceiveLocation": {
        "MessageEndpoint": {
          "Assembly": "ESB.Messages",
          "EventType" : "ESB.Messages.Events.TestEvent",
          "ResponseType": "ESB.Messages.Responses.TestResponse"
        }
      },
      "SendLocation": {
        "HttpEndpoint":{
          "Url": "http://localhost:5195/route",
          "Method": "GET",
          "AuthorizationType": "BasicAuthorization",
          "AuthorizationParameters": {
            "Username": "hello",
            "Password": "World"
          }
        }
      },
      "Settings": {
        "ErrorHandlingProfile": "ErrorProfileC",
        "Sync": true
      }
    }
  ],
  "DefaultSettings":{
    "ErrorHandlingProfile": "ErrorProfileA",
    "RetryPolicyProfile": "RetryPolicyB"
  },
  "MessageBroker": {
    "Host": "rabbitmq://localhost",
    "Username": "myuser",
    "Password": "mypass"
  }
}
