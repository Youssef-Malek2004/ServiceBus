{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Routes": [
    {
      "ID": "OrderProcessingRoute",
      "Enabled": true,
      "ReceiveLocation": {
        "HttpEndpoint": {
          "EndpointName": "testing",
          "Method": "GET"
        }
      },
      "SendLocation": {
        "HttpEndpoint":{
          "Url": "http://localhost:5172/orders",
          "Method": "GET",
          "Authorization": {
            "AuthorizationType" : "Bearer",
            "BearerTokenAuthorization" : {
              "Token" : "",
              "LoginUrl" : "http://localhost:5172/login",
              "RefreshTokenInterval" : 30
            }
          }
        }
      },
      "Settings": {
        "ErrorHandlingProfile": "ErrorProfileC",
        "Sync": true
      }
    },
    {
      "ID": "MessageTestingRoute",
      "Enabled": true,
      "ReceiveLocation": {
        "MessageEndpoint": {
          "Assembly": "ESB.Messages",
          "EventType" : "ESB.Messages.Events.TestEvent",
          "ResponseType": "ESB.Messages.Responses.TestResponse"
        }
      },
      "SendLocation": {
        "HttpEndpoint":{
          "Url": "http://localhost:5195/route",
          "Method": "GET",
          "Authorization": {
            "AuthorizationType" : "Basic",
            "BasicAuthorization":{
              "Username" : "user",
              "Password" : "password"
            }
          }
        }
      },
      "Settings": {
        "ErrorHandlingProfile": "ErrorProfileC",
        "Sync": true
      }
    }
  ],
  "DefaultSettings":{
    "ErrorHandlingProfile": "ErrorProfileA",
    "RetryPolicyProfile": "RetryPolicyB"
  },
  "MessageBroker": {
    "Host": "rabbitmq://localhost",
    "Username": "myuser",
    "Password": "mypass"
  }
}
