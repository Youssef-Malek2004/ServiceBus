{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Routes": [
    {
      "ID": "OrderProcessingRoute",
      "Enabled": true,
      "ReceiveLocation": {
        "HttpEndpoint": {
          "EndpointName": "orders",
          "Method": "GET",
          "AuthorizationType" : "BasicAuthorization"
        }
      },
      "SendLocation": {
        "HttpEndpoint":{
          "Url": "http://localhost:9090/incoming/orders",
          "Method": "GET",
          "AuthorizationType": "BasicAuthorization",
          "AuthorizationParameters": {
            "Username": "hello",
            "Password": "World"
          }
        }
      },
      "Settings": {
        "ErrorHandlingProfile": "ErrorProfileC",
        "Sync": true
      }
    }
  ],
  "DefaultSettings":{
    "ErrorHandlingProfile": "ErrorProfileA",
    "RetryPolicyProfile": "RetryPolicyB"
  }
}
